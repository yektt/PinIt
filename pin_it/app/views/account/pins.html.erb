<main>
  <div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center">
      <h1 class="p-5">My Pins</h1>
      <%= link_to('New Pin', pins_new_path , class:'btn btn-primary') %>
    </div>

    <div class="container">
      <ul class="row mt-5">
        <% ['title1', 'title2', 'title3', 'title4'].each do |title|%>
          <li class="list-unstyled col-md-4 col-sm-6">
            <div class="col mb-4">
              <%= render(partial: 'pin_card', locals:{ card_title: title }) %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
</main>