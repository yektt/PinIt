<form class="form-group">
  <h1 class="h3 mb-3 font-weight-normal mt-5">Please <%= label.downcase %></h1>
  <label for="inputEmail" class="sr-only">Email address</label>
  <input type="email" id="inputEmail" class="form-control mt-5" placeholder="Email address" required="" autofocus="">
  <label for="inputPassword" class="sr-only">Password</label>
  <input type="password" id="inputPassword" class="form-control" placeholder="Password" required="">
  <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
  <% if( label.downcase.include? "create") %>
    <label for="inputImage" class="sr-only">Avatar Picture</label>
    <input type="file" id="inputImage" class="form-control mt-5">
  <% end %>
  <button class="btn btn-lg btn-primary btn-block mt-5" type="submit"><%= label %></button>
</form>
