<!DOCTYPE html>
<html>
  <head>
    <title>PIN-IT</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'application', media: 'all'%>

  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <nav class="navbar navbar-light bg-light">
          <a class="navbar-brand" href="#">
            <img src="/docs/4.0/assets/brand/bootstrap-solid.svg" width="30" height="30" alt="">
          </a>
        </nav>
        
        <%= link_to('PIN-IT', root_path, class:'navbar-brand') %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
              <%= link_to('Home', root_path, class:'nav-link') %>
            </li>
            <li class="nav-item">
              <%= link_to('Register', user_register_path, class:'nav-link') %>
            </li>            
            <li class="nav-item">
              <%= link_to('Log in', user_log_in_path, class:'nav-link') %>
            </li>
            <li class="nav-item">
              <%= link_to('My Pins', account_pins_path, class:'nav-link') %>
            </li>
            <li class="nav-item">
              <a class="nav-link disabled" href="#">Disabled</a>
            </li>
            <li class="nav-item text-right">
              <form class=" form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
              </form>
            </li>
          </ul>
        </div>
      </nav>
    </header>
    <%= yield %>
    <footer>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <nav class="navbar navbar-light bg-light">
          <a class="navbar-brand" href="#">
            <img src="/docs/4.0/assets/brand/bootstrap-solid.svg" width="30" height="30" alt="">
          </a>
        </nav>
        
        <%= link_to('PIN-IT', root_path, class:'navbar-brand') %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
              <%= link_to('Home', root_path, class:'nav-link') %>
            </li>
            <li class="nav-item">
              <%= link_to('About', application_about_path, class:'nav-link') %>
            </li>
          </ul>
          <a class="text-right text-muted">Build by Yekta Turan</a>
        </div>
      </nav>
    </footer>
  </body>
</html>


